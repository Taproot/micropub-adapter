{
    "name": "taproot/micropub-adapter",
    "description": "The easiest way to add micropub support to existing or new applications.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Barnaby Walters",
            "email": "barnaby@waterpigs.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Taproot\\Micropub\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/MicropubAdapterMock.php",
            "example/src/ExampleMicropubAdapter.php"
        ]
    },
    "minimum-stability": "dev",
    "require": {
        "psr/http-message": "^1.0",
        "psr/log": "^1.1",
        "nyholm/psr7": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "slim/slim": "4.x-dev",
        "nyholm/psr7-server": "dev-master",
        "vimeo/psalm": "4.x-dev"
    }
}
