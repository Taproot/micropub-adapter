{
    "name": "taproot/micropub-adapter",
    "description": "The easiest way to add micropub support to existing or new applications.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Barnaby Walters",
            "email": "barnaby@waterpigs.co.uk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Taproot\\Micropub\\": "src"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/MicropubAdapterMock.php",
            "example/src/ExampleMicropubAdapter.php"
        ]
    },
    "require": {
        "psr/http-message": "^1.0",
        "psr/log": "^1.1",
        "nyholm/psr7": "^1.4",
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "slim/slim": "^4.x-dev",
        "nyholm/psr7-server": "dev-master",
        "vimeo/psalm": "^4.x-dev",
        "taproot/indieauth": "dev-main",
        "guzzlehttp/guzzle": "^7.4.x-dev||^2.0",
        "monolog/monolog": "2.x-dev"
    },
    "suggest": {
        "taproot/indieauth": "An IndieAuth implementation built for use with taproot/micropub-adapter."
    }
}
